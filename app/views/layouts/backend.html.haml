!!!5
%html
  %head
    %title
    = stylesheet_link_tag "backend"
    = stylesheet_link_tag "/stylesheets/jquery-ui-1.8.16.custom.css" #not asset packaged
    = javascript_include_tag "backend"
    = csrf_meta_tags

    = render :partial => "admin/dropboxes/js_templates"
  %body
    %header
    #container
      %section#explorer
        %h2 Lorem
        #dropbox_dirs
        %h2 Portfolio
        #section_dirs
      %section#remote
        #dropbox_files
          - unless notice.nil?
            %p.notice= notice
          - unless alert.nil?
            %p.alert= alert
          = yield
      %section#local
        #files
    %footer


