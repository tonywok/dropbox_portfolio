body {
  background-color: #78B988;
  color: #fff;
}

#sidebar {
  float: left;
  margin: 0 0 0 75px;

  .logo {
    width: 138px;
    height: 218px;
    background-image: url(<%= asset_path('logo.png')%>);
  }

  ul#nav {
    margin-top: 100px;

    li {
      list-style-position: inside;
    }

    li.selected { background-color: #fff; }
    li.separated { margin-bottom: 100px; }

    li a {
      color: #000;
      size: 16px;
      text-decoration: none;
      display: block;
      padding: 5px 15px;

      &:hover {
        background-color: #fff;
      }
    }
  }

  ul.sub {
    display: none;
    background-color: #fff;

    li {
      margin: 0px;
      position: relative;
    }

    div.corner {
      display: none;
      position: absolute;
      right: -20px;
      top: 5px;
      width: 0;
      height: 0;
      border-color: transparent transparent transparent #fff;
      border-style: solid;
      border-width: 10px;
    }
  }

}
